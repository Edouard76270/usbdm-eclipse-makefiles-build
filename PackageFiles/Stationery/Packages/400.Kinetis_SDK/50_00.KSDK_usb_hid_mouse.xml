<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE root SYSTEM "../package.dtd"
[
<!ENTITY usb-include-paths  SYSTEM "includes/00_00.usb_includes.xml">
]>

<root version="1.0" >
   <!-- Freescale group-ksdk-demos -->
   <projectActionList id="KSDK-usb-hid-mouse" root="">
      <applyWhen>
         <and>
            <variableRef idRef="demo.KSDK-usb-hid-mouse" />
            <variableRef idRef="outputType" condition="matches" value=".*ProjectType\.exe$" />
         </and>
      </applyWhen>
      <projectActionList>
         <applyWhen>
            <and>
               <variableRef idRef="projectOptionValue.Kinetis-SDK-enable" />
               <or>
                  <variableRef idRef="projectOptionValue.Kinetis-SDK-os-bare-metal" />
                  <and>
                     <variableRef idRef="demo.KSDK-usb-with-rtos"/>
                     <or>
                        <variableRef idRef="projectOptionValue.Kinetis-SDK-os-free-rtos" />
                        <variableRef idRef="projectOptionValue.Kinetis-SDK-os-mqx" />
                        <variableRef idRef="projectOptionValue.Kinetis-SDK-os-ucosii" />
                        <variableRef idRef="projectOptionValue.Kinetis-SDK-os-ucosiii" />
                     </or>
                  </and>
               </or>
            </and>
         </applyWhen>
         <variable id="projectOptionValue.KSDK-usb-hid-mouse" 
            name="USB HID Mouse Example" 
            description=
"The Evaluation board will enumerate as a USB mouse.\n
When connected the board generates mouse movements in a square."
            radioGroup="group-ksdk-demo" >
         </variable>
         <projectActionList>
            <applyWhen>
               <variableRef idRef="projectOptionValue.KSDK-usb-hid-mouse" />
            </applyWhen>
            <deleteResource target="Sources/main.c" />
         
            <copy source="usbdm_kds_path/examples/$(demo.KDS.boardName)/demo_apps/usb/device/hid/hid_mouse/readme.pdf"        type="link" target="doc/readme.pdf"             sourcePathType="absolute" />

            <copy source="usbdm_kds_path/examples/$(demo.KDS.boardName)/demo_apps/usb/device/hid/hid_mouse/hardware_init.c"    target="board/hardware_init.c"      sourcePathType="absolute" />
            <copy source="usbdm_kds_path/examples/$(demo.KDS.boardName)/demo_apps/usb/device/hid/hid_mouse/mouse.c"         target="Sources/mouse.c"         sourcePathType="absolute" />
            <copy source="usbdm_kds_path/examples/$(demo.KDS.boardName)/demo_apps/usb/device/hid/hid_mouse/mouse.h"         target="Sources/mouse.h"         sourcePathType="absolute" />
            <copy source="usbdm_kds_path/examples/$(demo.KDS.boardName)/demo_apps/usb/device/hid/hid_mouse/usb_descriptor.c"   target="Sources/usb_descriptor.c"   sourcePathType="absolute" />
            <copy source="usbdm_kds_path/examples/$(demo.KDS.boardName)/demo_apps/usb/device/hid/hid_mouse/usb_descriptor.h"   target="Sources/usb_descriptor.h"   sourcePathType="absolute" />

            <!-- C Include paths -->
            <projectOption id="net.sourceforge.usbdm.gnu.c.compiler.option.include.paths">
               &usb-include-paths;
            </projectOption>
            
            <!-- C++ Include paths -->
            <projectOption id="net.sourceforge.usbdm.gnu.cpp.compiler.option.include.paths">
               &usb-include-paths;
            </projectOption>
            
            <!-- C Link options -->
            <projectOption id="gnu.c.link.option.other">
               <value>&quot;--defsym=__ram_vector_table__=1&quot;</value>
            </projectOption>
            <!-- C++ Link options -->
            <projectOption id="gnu.cpp.link.option.other">
               <value>&quot;--defsym=__ram_vector_table__=1&quot;</value>
            </projectOption>
         </projectActionList>
      </projectActionList>
   </projectActionList>
</root>

<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE root SYSTEM "../package.dtd">

<root version="1.0" >
   <!-- Freescale group-ksdk-demos -->
   <projectActionList id="KSDK-I2C-slave-comm" root="">
      <applyWhen>
         <and>
            <variableRef idRef="demo.KSDK-I2C-master-slave-comm" />
            <variableRef idRef="outputType" condition="matches" value=".*ProjectType\.exe$" />
         </and>
      </applyWhen>
      <projectActionList>
         <applyWhen>
            <and>
               <variableRef idRef="projectOptionValue.Kinetis-SDK-enable" />
               <variableRef idRef="projectOptionValue.Kinetis-SDK-os-bare-metal" />
            </and>
         </applyWhen>
         <variable id="projectOptionValue.KSDK-I2C-comm-slave" 
            name="I2C Communication Demo (Slave)"
            description=
"The I2C communication application demonstrates I2C data communication between two boards.\n
It also features low power wakeup of the slave board by using I2C address matching."
            radioGroup="group-ksdk-demo" >
         </variable>
         <projectActionList>
            <applyWhen>
               <variableRef idRef="projectOptionValue.KSDK-I2C-comm-slave" />
            </applyWhen>
            <deleteResource target="Sources/main.c" />
            <copy source="usbdm_kds_path/examples/$(demo.KDS.boardName)/demo_apps/i2c_comm/hardware_init.c"        target="board/hardware_init.c"       sourcePathType="absolute" />
            <copy source="usbdm_kds_path/examples/$(demo.KDS.boardName)/demo_apps/i2c_comm/slave/main.c"           target="Sources/main.c"              sourcePathType="absolute" />
            <copy source="usbdm_kds_path/examples/$(demo.KDS.boardName)/demo_apps/i2c_comm/slave/fsl_i2c_irq.c"    target="Sources/fsl_i2c_irq.c"       sourcePathType="absolute" />
         </projectActionList>
      </projectActionList>
   </projectActionList>
</root>

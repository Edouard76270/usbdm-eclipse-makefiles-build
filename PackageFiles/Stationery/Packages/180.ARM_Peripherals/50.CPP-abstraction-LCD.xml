<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE root SYSTEM "../package.dtd">

<root version="1.0" >
   <projectActionList id="CPP-abstraction-LCD" >
      <applyWhen>
         <and>
            <or>
               <deviceFamilyMatches>CortexM0</deviceFamilyMatches>
               <deviceFamilyMatches>CortexM0plus</deviceFamilyMatches>
               <deviceFamilyMatches>CortexM4</deviceFamilyMatches>
               <deviceFamilyMatches>CortexM4F</deviceFamilyMatches>
            </or>
            <variableRef idRef="demo.cpp.peripheral.lcd" />
            <variableRef idRef="outputType" condition="matches" value=".*ProjectType\.exe$" />
         </and>
      </applyWhen>
      <projectActionList>
         <applyWhen>
         <and>
            <variableRef idRef="projectOptionValue.CPP-abstraction" condition="isTrue"/>
         </and>
         </applyWhen>
         <variable id="projectOptionValue.CPP-abstraction-LCD" 
            name="LCD C++ interface" 
            description="Adds a CPP abstraction layer for Elecfreaks LCD" 
            checkGroup="group-spi-peripheral-options" >
            <enableWhen>
               <and>
                  <requirement idRef="projectOptionValue.CPP-abstraction-SPI"/>
               </and>
            </enableWhen>
         </variable>
   
         <!-- LCD CPP abstraction layer -->
         <projectActionList>
            <projectActionList>
               <applyWhen >
                  <variableRef idRef="projectOptionValue.CPP-abstraction-LCD" />
               </applyWhen>
               <copy source="Project_Headers/LCD.h"          target="Project_Headers/LCD.h" />
               <copy source="Project_Headers/LCD_private.h"  target="Project_Headers/LCD_private.h" />
               <copy source="Project_Headers/Fonts.h"        target="Project_Headers/Fonts.h" replace="true"/>
               <copy source="Sources/LCD.cpp"                target="Sources/LCD.cpp" />
               <copy source="Sources/Fonts.cpp"              target="Sources/Fonts.cpp" replace="true"/>
               <copy source="Project_Headers/Delay.h"        target="Project_Headers/Delay.h" replace="true"/>
               <copy source="Sources/Delay.c"                target="Sources/Delay.c" replace="true"/>
               <projectOption id="net.sourceforge.usbdm.gnu.c.compiler.option.preprocessor.def.symbols">
                  <value>LCD_AVAILABLE</value>
               </projectOption>
               <projectOption id="net.sourceforge.usbdm.gnu.cpp.compiler.option.preprocessor.def.symbols">
                  <value>LCD_AVAILABLE</value>
               </projectOption>
            </projectActionList>
         </projectActionList>
      </projectActionList>
    </projectActionList>
</root>
